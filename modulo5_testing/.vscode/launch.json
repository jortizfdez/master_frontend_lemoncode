{
    "version": "0.2.0",
    "configurations": [

      {
        "type": "node",
        "request": "launch",
        "name": "Jest single run",
        "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "args": [
          "--verbose",
          "-i",
          "--no-cache"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Jest watch run",
        "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "args": [
          "--watchAll",
          "--verbose",
          "-i",
          "--no-cache"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Jest selected file",
        "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "args": [
          "${fileBasenameNoExtension}",
          "--watchAll",
          "--verbose",
          "-i",
          "--no-cache"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }